# CIS Test Node with AI Models
FROM rust:1.75-alpine3.19

# 安装构建依赖
RUN apk add --no-cache ca-certificates curl sqlite-libs libgcc musl-dev openssl-dev pkgconfig

WORKDIR /app

# 复制项目代码
COPY . .

# 预下载 ONNX 模型到缓存目录
ENV HF_HOME=/opt/hf-cache
RUN mkdir -p $HF_HOME && \
    cargo test --package cis-core test_embedding -- --ignored --test-threads=1 2>&1 || true

# 运行测试
CMD ["cargo", "test", "--package", "cis-core"]
